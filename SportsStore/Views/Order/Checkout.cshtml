@model Order

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods rigt away!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-action="Checkout">
    <h3>Ship to</h3>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control"/>
    </div>

    <h3>Address</h3>
    <div class="form-group">
        <label asp-for="Line1">Line1:</label>
        <input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Line2">Line2:</label>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Line3">Line3:</label>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip:</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-control" />
    </div>
    <h3>Option</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWarp"  />
        </label>       
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
